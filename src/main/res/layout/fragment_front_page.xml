<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <Button
        android:id="@+id/tv"
        style="@style/light_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@id/youtube"
        android:drawableTop="@drawable/ic_tv_black_foreground"
        android:padding="10dp"
        android:text="@string/tv" />

    <Button
        android:id="@+id/youtube"
        style="@style/light_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:layout_toStartOf="@id/divider2"
        android:layout_centerVertical="true"
        android:drawableTop="@drawable/ic_youtube_foreground"
        android:padding="10dp"
        android:text="@string/youtube" />

    <Button
        android:id="@+id/movies"
        style="@style/light_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/divider2"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:layout_centerVertical="true"
        android:drawableTop="@drawable/ic_movie_foreground"
        android:padding="10dp"
        android:text="@string/movies" />

    <Button
        android:id="@+id/series"
        style="@style/light_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:layout_toEndOf="@id/movies"
        android:layout_centerVertical="true"
        android:drawableTop="@drawable/ic_series_foreground"
        android:padding="10dp"
        android:text="@string/series" />

    <Button
        android:id="@+id/exit"
        style="@style/light_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:text="Exit" />

    <View
        android:id="@+id/divider2"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:background="@color/transparent" />

</RelativeLayout>